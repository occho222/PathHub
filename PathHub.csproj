<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <LangVersion>latest</LangVersion>
    <Version>1.6.6</Version>
    <AssemblyVersion>1.6.6.0</AssemblyVersion>
    <FileVersion>1.6.6.0</FileVersion>
    <StartupObject>ModernLauncher.App</StartupObject>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <ApplicationIcon>PathHub.ico</ApplicationIcon>
    <AssemblyName>NicoPath</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="PathHub.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include=".github\copilot-instructions.md" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

</Project>
