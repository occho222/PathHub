<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ModernLauncher.Views.FolderImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="フォルダインポート" 
        Height="480" 
        Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="420"
        MinWidth="500"
        Background="{StaticResource {x:Static SystemColors.WindowBrushKey}}"
        FontFamily="Yu Gothic UI, Meiryo UI, Arial, sans-serif"
        FontSize="13">

    <Window.Resources>
        <!-- Include the same modern styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Yu Gothic UI, Meiryo UI, Arial, sans-serif"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#28A745"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Height" Value="36"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Setter Property="BorderBrush" Value="#D1D1D1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Height" Value="36"/>
        </Style>

        <Style x:Key="BrowseButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#6C757D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="36"/>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Yu Gothic UI, Meiryo UI, Arial, sans-serif"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D1D1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="false" 
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Hidden"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontFamily" Value="Yu Gothic UI, Meiryo UI, Arial, sans-serif"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Yu Gothic UI, Meiryo UI, Arial, sans-serif"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Yu Gothic UI, Meiryo UI, Arial, sans-serif"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="0" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="24">
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="📂 フォルダインポート" 
                           Style="{StaticResource HeaderStyle}"
                           HorizontalAlignment="Center"/>

                <!-- Description -->
                <TextBlock Text="フォルダを選択して、プロジェクトエリアに階層構造で自動追加します。"
                           FontSize="14"
                           Foreground="#605E5C"
                           TextWrapping="Wrap"
                           Margin="0,0,0,24"/>

                <!-- Form Fields -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Folder Path Field -->
                    <TextBlock Grid.Row="0" 
                               Text="フォルダパス" 
                               Style="{StaticResource LabelStyle}"/>
                    <Grid Grid.Row="1" Margin="0,0,0,18">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" 
                                 x:Name="FolderPathTextBox"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Margin="0,0,10,0"
                                 ToolTip="インポートするフォルダのパスを入力または選択"
                                 TextChanged="FolderPathTextBox_TextChanged"/>
                        <Button Grid.Column="1" 
                                x:Name="BrowseFolderButton"
                                Content="📂 選択"
                                Style="{StaticResource BrowseButtonStyle}"
                                Click="BrowseFolderButton_Click"/>
                    </Grid>

                    <!-- Import Settings -->
                    <TextBlock Grid.Row="2" 
                               Text="インポート設定" 
                               Style="{StaticResource LabelStyle}"/>
                    
                    <!-- Max Depth -->
                    <Grid Grid.Row="3" Margin="0,0,0,18">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="階層数: " 
                                   Style="{StaticResource LabelStyle}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,8"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox x:Name="MaxDepthTextBox"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Width="60"
                                     Text="3"
                                     VerticalAlignment="Center"
                                     ToolTip="走査するサブフォルダの最大階層数"
                                     TextChanged="MaxDepthTextBox_TextChanged"/>
                            <TextBlock Text="階層まで"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"
                                       FontSize="13"/>
                        </StackPanel>
                    </Grid>

                    <!-- Include Hidden -->
                    <CheckBox Grid.Row="4" 
                              x:Name="IncludeHiddenCheckBox"
                              Content="隠しフォルダとファイルも含める"
                              Style="{StaticResource ModernCheckBoxStyle}"
                              Margin="0,0,0,18"
                              ToolTip="隠しフォルダとファイルもインポートに含める"
                              Checked="IncludeHiddenCheckBox_Checked"
                              Unchecked="IncludeHiddenCheckBox_Unchecked"/>

                    <!-- Preview Info -->
                    <TextBlock Grid.Row="5" 
                               Text="プレビュー" 
                               Style="{StaticResource LabelStyle}"/>
                    <Border Grid.Row="6" 
                            Background="#F8F9FA"
                            BorderBrush="#D1D1D1"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,0,0,18">
                        <TextBlock x:Name="PreviewTextBlock"
                                   Text="フォルダを選択すると、ここにプレビューが表示されます。"
                                   FontSize="12"
                                   Foreground="#605E5C"
                                   TextWrapping="Wrap"/>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="1" 
                Background="#F8F9FA" 
                BorderBrush="#E1DFDD" 
                BorderThickness="0,1,0,0"
                Padding="24,18">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Import Button -->
                <Button Grid.Column="1" 
                        x:Name="ImportButton"
                        Content="インポート"
                        Style="{StaticResource PrimaryButtonStyle}"
                        IsDefault="True"
                        Margin="0,0,12,0"
                        Click="ImportButton_Click"/>

                <!-- Cancel Button -->
                <Button Grid.Column="2" 
                        x:Name="CancelButton"
                        Content="キャンセル"
                        Style="{StaticResource SecondaryButtonStyle}"
                        IsCancel="True"
                        Click="CancelButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>