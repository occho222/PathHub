<Window x:Class="ModernLauncher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModernLauncher.Converters"
        xmlns:vm="clr-namespace:ModernLauncher.ViewModels"
        xmlns:res="clr-namespace:ModernLauncher.Resources"
        mc:Ignorable="d"
        Title="??? PathHub" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#ECE9D8"
        AllowDrop="True"
        FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
        TextElement.FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <res:LocalizedStrings x:Key="Strings"/>
        
        <!-- Base style for all text elements -->
        <Style TargetType="TextElement">
            <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
        </Style>
        
        <Style TargetType="MenuItem">
            <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
        </Style>
        
        <Style TargetType="TreeView">
            <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
        </Style>
        
        <Style TargetType="ListView">
            <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
        </Style>
        
        <SolidColorBrush x:Key="ToolbarColor" Color="#ECE9D8"/>
        <SolidColorBrush x:Key="PanelColor" Color="#F6F6F6"/>
        <SolidColorBrush x:Key="SelectedColor" Color="#316AC5"/>
        <SolidColorBrush x:Key="HoverColor" Color="#E6F2FF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#ACA899"/>
        <SolidColorBrush x:Key="TextColor" Color="#000000"/>
        <SolidColorBrush x:Key="SubTextColor" Color="#666666"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#FFFFFF"/>
        
        <!-- Converters -->
        <local:GroupButtonVisibilityConverter x:Key="GroupButtonVisibilityConverter"/>
        <local:CategoryColorConverter x:Key="CategoryColorConverter"/>
        <local:CategoryColorIndicatorConverter x:Key="CategoryColorIndicatorConverter"/>
        
        <!-- Project Tree View Style -->
        <Style x:Key="ProjectTreeViewStyle" TargetType="TreeView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
        </Style>

        <Style x:Key="ProjectTreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
            <EventSetter Event="Selected" Handler="ProjectTreeViewItem_Selected"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Border x:Name="Border" Grid.Row="0" Background="Transparent" 
                                    Padding="{TemplateBinding Padding}" CornerRadius="3" Margin="1,0">
                                <ContentPresenter x:Name="PART_Header" 
                                                ContentSource="Header"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                TextElement.Foreground="{TemplateBinding Foreground}"
                                                TextElement.FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                            </Border>
                            <ItemsPresenter x:Name="ItemsHost" Grid.Row="1" 
                                          Visibility="Collapsed" Margin="16,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#316AC5"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="PART_Header" Property="TextElement.Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E6F2FF"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="#316AC5"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="PART_Header" Property="TextElement.Foreground" Value="White"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ProjectNodeTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFolder}" Value="True">
                    <Setter Property="FontWeight" Value="Normal"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=IsSelected}" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Button Styles -->
        <Style x:Key="ModernPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#005A9E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                            TextElement.FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#106EBE"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#005A9E"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#0078D4" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#004578"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#AAAAAA"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernSecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F3F2F1"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Setter Property="BorderBrush" Value="#C8C6C4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                            TextElement.FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EDEBE9"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#8A8886"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#8A8886" BlurRadius="6" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E1DFDD"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#605E5C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#F3F2F1"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#E1DFDD"/>
                                <Setter Property="Foreground" Value="#A19F9D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessCommandButton" TargetType="Button" BasedOn="{StaticResource ModernSecondaryButton}">
            <Setter Property="Background" Value="#107C10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#0B5A0B"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0E6B0E"/>
                    <Setter Property="BorderBrush" Value="#107C10"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0B5A0B"/>
                    <Setter Property="BorderBrush" Value="#094509"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerCommandButton" TargetType="Button" BasedOn="{StaticResource ModernSecondaryButton}">
            <Setter Property="Background" Value="#D13438"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#A4262C"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B22A2F"/>
                    <Setter Property="BorderBrush" Value="#D13438"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A4262C"/>
                    <Setter Property="BorderBrush" Value="#8E1F23"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VSCodeButton" TargetType="Button" BasedOn="{StaticResource ModernSecondaryButton}">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#005A9E"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1C97EA"/>
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                    <Setter Property="BorderBrush" Value="#004578"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OfficeButton" TargetType="Button" BasedOn="{StaticResource ModernSecondaryButton}">
            <Setter Property="Background" Value="#D24726"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#B23A1B"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E45A3A"/>
                    <Setter Property="BorderBrush" Value="#D24726"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B23A1B"/>
                    <Setter Property="BorderBrush" Value="#9A3117"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernSmallButton" TargetType="Button">
            <Setter Property="Background" Value="#F3F2F1"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Setter Property="BorderBrush" Value="#C8C6C4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                            TextElement.FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EDEBE9"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#8A8886"/>
                                <Setter Property="Foreground" Value="#201F1E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E1DFDD"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#605E5C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#F3F2F1"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#E1DFDD"/>
                                <Setter Property="Foreground" Value="#A19F9D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AddSmallButton" TargetType="Button" BasedOn="{StaticResource ModernSmallButton}">
            <Setter Property="Background" Value="#107C10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#0B5A0B"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0E6B0E"/>
                    <Setter Property="BorderBrush" Value="#107C10"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0B5A0B"/>
                    <Setter Property="BorderBrush" Value="#094509"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteSmallButton" TargetType="Button" BasedOn="{StaticResource ModernSmallButton}">
            <Setter Property="Background" Value="#D13438"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#A4262C"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B22A2F"/>
                    <Setter Property="BorderBrush" Value="#D13438"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A4262C"/>
                    <Setter Property="BorderBrush" Value="#8E1F23"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NeutralSmallButton" TargetType="Button" BasedOn="{StaticResource ModernSmallButton}"/>

        <!-- Other Styles -->
        <Style x:Key="ClassicTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#316AC5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GridViewColumnHeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="{StaticResource PanelColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Grid>
                            <Border x:Name="HeaderBorder" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                RecognizesAccessKey="True"
                                                TextElement.FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                            </Border>
                            <Thumb x:Name="PART_HeaderGripper" 
                                   HorizontalAlignment="Right" 
                                   Width="3" 
                                   Cursor="SizeWE" 
                                   Background="Transparent"
                                   Margin="0,0,-1,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HeaderBorder" Property="Background" Value="#E6F2FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="HeaderBorder" Property="Background" Value="#CCDDEE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding NewProjectCommand}"/>
        <KeyBinding Key="I" Modifiers="Ctrl" Command="{Binding AddItemCommand}"/>
        <KeyBinding Key="G" Modifiers="Ctrl" Command="{Binding AddGroupCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveDataCommand}"/>
        <KeyBinding Key="F1" Command="{Binding ShowHelpCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="38"/>
            <RowDefinition Height="44"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Border Grid.Row="0" Background="{StaticResource ToolbarColor}" 
                BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
            <DockPanel>
                <StackPanel Orientation="Horizontal" Margin="6,0">
                    <Menu Background="Transparent" FontSize="13" 
                          FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS">
                        <MenuItem Header="File">
                            <MenuItem Header="New Project" Command="{Binding NewProjectCommand}"/>
                            <MenuItem Header="New Folder" Command="{Binding NewFolderCommand}"/>
                            <Separator/>
                            <MenuItem Header="Import" Command="{Binding ImportProjectCommand}"/>
                            <MenuItem Header="Export" Command="{Binding ExportProjectCommand}"/>
                        </MenuItem>
                        <MenuItem Header="Edit">
                            <MenuItem Header="Move Project" Command="{Binding MoveToFolderCommand}"/>
                            <MenuItem Header="Delete" Command="{Binding DeleteProjectCommand}"/>
                        </MenuItem>
                        <MenuItem Header="View"/>
                        <MenuItem Header="Tools">
                            <MenuItem Header="Create Test Folders" Command="{Binding CreateTestFoldersCommand}"/>
                            <MenuItem Header="Color Settings" Command="{Binding ShowColorSettingsCommand}"/>
                        </MenuItem>
                        <MenuItem Header="Help" Command="{Binding ShowHelpCommand}"/>
                    </Menu>
                </StackPanel>
                
                <TextBlock DockPanel.Dock="Right" Text="{Binding AppVersion}" 
                         FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
                         Foreground="{StaticResource SubTextColor}" FontSize="12" 
                         VerticalAlignment="Center" Margin="0,0,8,0"/>
            </DockPanel>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="{StaticResource ToolbarColor}" 
                BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
            <DockPanel Margin="6,5">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Button Style="{StaticResource ModernPrimaryButton}" 
                            Command="{Binding AddItemCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="➕" FontSize="14" Margin="0,0,6,0" FontWeight="Bold"
                                     Style="{StaticResource EmojiTextBlock}"
                                     Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                            <TextBlock Text="{Binding Source={StaticResource Strings}, Path=AddItem}" FontWeight="SemiBold"
                                     FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
                                     Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="0,0,8,0">
                    <TextBlock Text="{Binding Source={StaticResource Strings}, Path=Search}" Foreground="{StaticResource TextColor}" 
                             FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
                             VerticalAlignment="Center" Margin="0,0,6,0" FontSize="13"/>
                    <TextBox Style="{StaticResource ClassicTextBox}"
                           Width="220" Height="30" VerticalAlignment="Center"
                           Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                           VerticalContentAlignment="Center" Padding="8,4"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Project Bar with Item Operations -->
        <Border Grid.Row="2" Background="{StaticResource PanelColor}" 
                BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
            <Grid Margin="6,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Work Tray Label -->
                <TextBlock Grid.Column="0" Text="{Binding Source={StaticResource Strings}, Path=WorkTray}" 
                         Foreground="{StaticResource TextColor}" 
                         VerticalAlignment="Center" FontSize="13" FontWeight="Bold" Margin="0,0,20,0"
                         FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                
                <!-- Item Operation Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource SuccessCommandButton}" 
                            Command="{Binding EditItemCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            IsEnabled="{Binding SelectedItem, Converter={x:Static local:NullToBoolConverter.Instance}}"
                            Margin="3,0" Height="32" MinWidth="70">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✏️" FontSize="12" Margin="0,0,6,0" FontWeight="Bold"
                                     Style="{StaticResource EmojiTextBlock}"
                                     Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                            <TextBlock Text="{Binding Source={StaticResource Strings}, Path=Edit}" FontWeight="SemiBold"
                                     Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                     FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource DangerCommandButton}"
                            Command="{Binding DeleteItemCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            IsEnabled="{Binding SelectedItem, Converter={x:Static local:NullToBoolConverter.Instance}}"
                            Margin="3,0" Height="32" MinWidth="70">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🗑️" FontSize="12" Margin="0,0,6,0" FontWeight="Bold"
                                     Style="{StaticResource EmojiTextBlock}"
                                     Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                            <TextBlock Text="{Binding Source={StaticResource Strings}, Path=Delete}" FontWeight="SemiBold"
                                     Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                     FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource ModernSecondaryButton}"
                            Command="{Binding MoveItemUpCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            IsEnabled="{Binding SelectedItem, Converter={x:Static local:NullToBoolConverter.Instance}}"
                            Margin="3,0" Height="32" MinWidth="60">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⬆️" FontSize="12" Margin="0,0,6,0" FontWeight="Bold"
                                     Style="{StaticResource EmojiTextBlock}"
                                     Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                            <TextBlock Text="{Binding Source={StaticResource Strings}, Path=Up}" FontWeight="SemiBold"
                                     Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                     FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource ModernSecondaryButton}"
                            Command="{Binding MoveItemDownCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            IsEnabled="{Binding SelectedItem, Converter={x:Static local:NullToBoolConverter.Instance}}"
                            Margin="3,0" Height="32" MinWidth="60">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⬇️" FontSize="12" Margin="0,0,6,0" FontWeight="Bold"
                                     Style="{StaticResource EmojiTextBlock}"
                                     Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                            <TextBlock Text="{Binding Source={StaticResource Strings}, Path=Down}" FontWeight="SemiBold"
                                     Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                     FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- App Launch Buttons -->
                    <Button Style="{StaticResource VSCodeButton}"
                            Command="{Binding OpenWithVSCodeCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            IsEnabled="{Binding SelectedItem, Converter={x:Static local:NullToBoolConverter.Instance}}"
                            Margin="10,0,3,0" Height="32" MinWidth="90"
                            ToolTip="Open with VS Code">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚡" FontSize="12" Margin="0,0,6,0" FontWeight="Bold"
                                     Style="{StaticResource EmojiTextBlock}"
                                     Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                            <TextBlock Text="VSCode" FontWeight="SemiBold"
                                     Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                     FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource OfficeButton}"
                            Command="{Binding OpenWithOfficeCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            IsEnabled="{Binding SelectedItem, Converter={x:Static local:NullToBoolConverter.Instance}}"
                            Margin="3,0" Height="32" MinWidth="90"
                            ToolTip="Open with Office">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋" FontSize="12" Margin="0,0,6,0" FontWeight="Bold"
                                     Style="{StaticResource EmojiTextBlock}"
                                     Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                            <TextBlock Text="Office" FontWeight="SemiBold"
                                     Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                     FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <!-- Project Management Buttons -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource NeutralSmallButton}" 
                            Command="{Binding NewFolderCommand}" ToolTip="New Folder"
                            Margin="0,0,3,0">
                        <TextBlock Text="📁" FontSize="10" FontWeight="Bold"
                                 Style="{StaticResource EmojiTextBlock}"
                                 Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                    </Button>
                    <Button Style="{StaticResource AddSmallButton}" 
                            Command="{Binding NewProjectCommand}" ToolTip="New Project"
                            Margin="0,0,3,0">
                        <TextBlock Text="➕" FontSize="10" FontWeight="Bold"
                                 Style="{StaticResource EmojiTextBlock}"
                                 Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                    </Button>
                    <Button Style="{StaticResource NeutralSmallButton}" 
                            Command="{Binding MoveToFolderCommand}" ToolTip="Move to Folder"
                            Margin="0,0,3,0">
                        <TextBlock Text="📦" FontSize="10" FontWeight="Bold"
                                 Style="{StaticResource EmojiTextBlock}"
                                 Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                    </Button>
                    <Button Style="{StaticResource DeleteSmallButton}" 
                            Command="{Binding DeleteProjectCommand}" ToolTip="Delete"
                            Margin="0,0,0,0">
                        <TextBlock Text="❌" FontSize="10" FontWeight="Bold"
                                 FontFamily="Segoe UI Emoji, Segoe UI Symbol, Segoe UI, Noto Color Emoji, Arial Unicode MS"
                                 UseLayoutRounding="True"
                                 TextOptions.TextFormattingMode="Display"
                                 TextOptions.TextRenderingMode="ClearType"
                                 Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="3" Background="{StaticResource BackgroundColor}"
              AllowDrop="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="200" MaxWidth="500"/>
                <ColumnDefinition Width="2"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <Border Grid.Column="0" Background="{StaticResource PanelColor}" 
                    BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="150" MinHeight="80"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="80"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Project Section -->
                    <Border Grid.Row="0" Background="#E8E5D7" BorderBrush="{StaticResource BorderColor}" 
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Source={StaticResource Strings}, Path=Projects}" 
                                     FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
                                     FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextColor}"
                                     VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Style="{StaticResource NeutralSmallButton}"
                                        Command="{Binding NewFolderCommand}" 
                                        ToolTip="New Folder"
                                        Margin="0,0,3,0">
                                    <TextBlock Text="📁" FontSize="10" FontWeight="Bold"
                                             Style="{StaticResource EmojiTextBlock}"
                                             Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                                </Button>
                                <Button Style="{StaticResource AddSmallButton}"
                                        Command="{Binding NewProjectCommand}" 
                                        ToolTip="New Project"
                                        Margin="0,0,3,0">
                                    <TextBlock Text="➕" FontSize="10" FontWeight="Bold"
                                             Style="{StaticResource EmojiTextBlock}"
                                             Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                                </Button>
                                <Button Style="{StaticResource NeutralSmallButton}"
                                        Command="{Binding MoveToFolderCommand}" 
                                        ToolTip="Move to Folder"
                                        Margin="0,0,3,0">
                                    <TextBlock Text="📦" FontSize="10" FontWeight="Bold"
                                             Style="{StaticResource EmojiTextBlock}"
                                             Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                                </Button>
                                <Button Style="{StaticResource DeleteSmallButton}"
                                        Command="{Binding DeleteProjectCommand}" 
                                        ToolTip="Delete"
                                        Margin="0,0,0,0">
                                    <TextBlock Text="❌" FontSize="10" FontWeight="Bold"
                                             FontFamily="Segoe UI Emoji, Segoe UI Symbol, Segoe UI, Noto Color Emoji, Arial Unicode MS"
                                             UseLayoutRounding="True"
                                             TextOptions.TextFormattingMode="Display"
                                             TextOptions.TextRenderingMode="ClearType"
                                             Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <TreeView Grid.Row="1" 
                             Style="{StaticResource ProjectTreeViewStyle}"
                             Margin="4"
                             ItemsSource="{Binding ProjectNodes}">
                        <TreeView.ItemContainerStyle>
                            <StaticResource ResourceKey="ProjectTreeViewItemStyle"/>
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Folder icon for folders only -->
                                    <TextBlock Text="📁" FontSize="13" Margin="0,0,4,0" FontWeight="Bold"
                                               FontFamily="Segoe UI Emoji, Segoe UI Symbol, Segoe UI, Noto Color Emoji, Arial Unicode MS"
                                               UseLayoutRounding="True"
                                               TextOptions.TextFormattingMode="Display"
                                               TextOptions.TextRenderingMode="ClearType"
                                               Foreground="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=Foreground}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsFolder}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <!-- Project name -->
                                    <TextBlock Text="{Binding Name}" FontSize="13" Margin="0,0,4,0"
                                             FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
                                             Style="{StaticResource ProjectNodeTextBlockStyle}"
                                             Foreground="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=Foreground}"/>
                                    <!-- Item count -->
                                    <TextBlock Text="{Binding ItemCountText}" FontSize="12" 
                                             FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
                                             Foreground="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=Foreground}"
                                             VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=IsSelected}" Value="False">
                                                        <Setter Property="Foreground" Value="{StaticResource SubTextColor}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>

                    <!-- Horizontal Splitter -->
                    <GridSplitter Grid.Row="2" Background="{StaticResource BorderColor}" 
                                HorizontalAlignment="Stretch" Height="2" Cursor="SizeNS"
                                ResizeBehavior="PreviousAndCurrent" ResizeDirection="Rows"
                                VerticalAlignment="Center"/>
                    
                    <!-- Group Section -->
                    <Border Grid.Row="3" Background="#E8E5D7" BorderBrush="{StaticResource BorderColor}" 
                            BorderThickness="0,1,0,1" Padding="8,6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Source={StaticResource Strings}, Path=SmartFolders}" 
                                     FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextColor}"
                                     VerticalAlignment="Center"
                                     FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                            <Button Grid.Column="1" Style="{StaticResource AddSmallButton}"
                                    Command="{Binding AddGroupCommand}" 
                                    ToolTip="{Binding Source={StaticResource Strings}, Path=AddGroup}"
                                    Margin="0,0,0,0">
                                <TextBlock Text="➕" FontSize="10" FontWeight="Bold"
                                         Style="{StaticResource EmojiTextBlock}"
                                         Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                            </Button>
                        </Grid>
                    </Border>

                    <TreeView Grid.Row="4" Background="Transparent" BorderThickness="0"
                            FontSize="13" FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS" Margin="4"
                            ItemsSource="{Binding CurrentProject.Groups}"
                            SelectedItemChanged="TreeView_SelectedItemChanged">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="Padding" Value="2"/>
                                <Setter Property="Margin" Value="0,1"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TreeViewItem">
                                            <Border x:Name="Border" Background="Transparent" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter x:Name="PART_Header" 
                                                                ContentSource="Header"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                TextElement.Foreground="{TemplateBinding Foreground}"
                                                                TextElement.FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#316AC5"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter TargetName="PART_Header" Property="TextElement.Foreground" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#E6F2FF"/>
                                                </Trigger>
                                                <MultiTrigger>
                                                    <MultiTrigger.Conditions>
                                                        <Condition Property="IsSelected" Value="True"/>
                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                    </MultiTrigger.Conditions>
                                                    <Setter TargetName="Border" Property="Background" Value="#316AC5"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter TargetName="PART_Header" Property="TextElement.Foreground" Value="White"/>
                                                </MultiTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontSize="13" Margin="0,0,6,0"
                                               FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                                    <TextBlock Text="{Binding ItemCount}" FontSize="12" 
                                             FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
                                             Foreground="{StaticResource SubTextColor}"/>
                                </StackPanel>
                            </DataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Background="{StaticResource BorderColor}" 
                        HorizontalAlignment="Stretch" Width="2" Cursor="SizeWE"
                        ResizeBehavior="PreviousAndNext" ResizeDirection="Columns"/>

            <!-- Main ListView with Drag and Drop -->
            <ListView x:Name="MainListView" Grid.Column="2" Background="White" BorderThickness="0"
                    ItemsSource="{Binding DisplayedItems}"
                    SelectedItem="{Binding SelectedItem}"
                    FontSize="13"
                    FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
                    AllowDrop="True"
                    MouseDoubleClick="ListView_MouseDoubleClick">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="2"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#316AC5"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E6F2FF"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="#316AC5"/>
                                <Setter Property="Foreground" Value="White"/>
                            </MultiTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView AllowsColumnReorder="True">
                        <GridView.ColumnHeaderContainerStyle>
                            <StaticResource ResourceKey="GridViewColumnHeaderStyle"/>
                        </GridView.ColumnHeaderContainerStyle>
                        <GridViewColumn Width="60">
                            <GridViewColumnHeader Content="{Binding Source={StaticResource Strings}, Path=Type}" Tag="ItemType"/>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Icon}" FontSize="16" 
                                             Style="{StaticResource EmojiTextBlock}"
                                             HorizontalAlignment="Center" Margin="4"
                                             UseLayoutRounding="True"
                                             TextOptions.TextFormattingMode="Display"
                                             TextOptions.TextRenderingMode="ClearType"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="130">
                            <GridViewColumnHeader Content="{Binding Source={StaticResource Strings}, Path=Category}" Tag="Category"/>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="6,2">
                                        <Border Width="16" Height="12" 
                                                Background="{Binding Category, Converter={StaticResource CategoryColorIndicatorConverter}}"
                                                BorderBrush="Gray" BorderThickness="1" 
                                                CornerRadius="2" Margin="0,0,6,0"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Category}" FontSize="12" 
                                                 FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
                                                 Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=Foreground}" 
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="240">
                            <GridViewColumnHeader Content="{Binding Source={StaticResource Strings}, Path=Name}" Tag="Name"/>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" FontSize="13" 
                                             FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
                                             Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=Foreground}" 
                                             Margin="6,2"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="200">
                            <GridViewColumnHeader Content="{Binding Source={StaticResource Strings}, Path=Description}" Tag="Description"/>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Description}" FontSize="12" 
                                             FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
                                             Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=Foreground}" 
                                             Margin="6,2"
                                             TextTrimming="CharacterEllipsis"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="280">
                            <GridViewColumnHeader Content="{Binding Source={StaticResource Strings}, Path=Path}" Tag="Path"/>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path}" FontSize="12" 
                                             FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
                                             Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=Foreground}" 
                                             Margin="6,2"
                                             TextTrimming="CharacterEllipsis"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="120">
                            <GridViewColumnHeader Content="{Binding Source={StaticResource Strings}, Path=Group}" Tag="GroupNames"/>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding GroupNames}" FontSize="12" 
                                             FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
                                             Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=Foreground}" 
                                             Margin="6,2"
                                             TextTrimming="CharacterEllipsis"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
                <ListView.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding LaunchItemCommand}" CommandParameter="{Binding SelectedItem}"/>
                    <KeyBinding Key="Delete" Command="{Binding DeleteItemCommand}" CommandParameter="{Binding SelectedItem}"/>
                </ListView.InputBindings>
            </ListView>

            <!-- Drop overlay for visual feedback -->
            <Border x:Name="DropOverlay" Grid.ColumnSpan="3" 
                    Background="#80E6F2FF" 
                    BorderBrush="#316AC5" 
                    BorderThickness="2" 
                    Visibility="Collapsed">
                <TextBlock Text="{Binding Source={StaticResource Strings}, Path=DropMessage}" 
                           FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           FontSize="16" 
                           Foreground="#316AC5"/>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{StaticResource ToolbarColor}" 
                BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0">
            <DockPanel Margin="6,3">
                <TextBlock Text="{Binding StatusText}" FontSize="12" 
                         FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
                         Foreground="{StaticResource TextColor}" VerticalAlignment="Center"/>
                <TextBlock DockPanel.Dock="Right" FontSize="12" 
                         FontFamily="Segoe UI, Segoe UI Emoji, Noto Color Emoji, Arial Unicode MS"
                         Foreground="{StaticResource SubTextColor}" VerticalAlignment="Center"
                         Text="{Binding Source={StaticResource Strings}, Path=StatusHelp}"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>