<Window x:Class="PathHub.Views.BackupManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="バックアップ管理"
        Height="500"
        Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#ECE9D8"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- 明るいテーマのスタイル -->
        <SolidColorBrush x:Key="ToolbarColor" Color="#ECE9D8"/>
        <SolidColorBrush x:Key="PanelColor" Color="#F6F6F6"/>
        <SolidColorBrush x:Key="BorderColor" Color="#ACA899"/>
        <SolidColorBrush x:Key="TextColor" Color="#000000"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#FFFFFF"/>

        <Style x:Key="LightButton" TargetType="Button">
            <Setter Property="Background" Value="#D4D0C8"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E6F2FF"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LightListBox" TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="LightTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="LightLabel" TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="LightGroupBox" TargetType="GroupBox">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="{StaticResource PanelColor}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- タイトル -->
        <TextBlock Grid.Row="0"
                   Text="バックアップ管理"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="{StaticResource TextColor}"
                   Margin="0,0,0,15"/>

        <!-- 新規バックアップセクション -->
        <GroupBox Grid.Row="1"
                  Header="新規バックアップ作成"
                  Style="{StaticResource LightGroupBox}"
                  Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Content="バックアップ名:"
                       Style="{StaticResource LightLabel}"
                       VerticalAlignment="Center"/>

                <TextBox Grid.Column="1"
                         x:Name="BackupNameTextBox"
                         Style="{StaticResource LightTextBox}"
                         Margin="10,0"
                         VerticalAlignment="Center"/>

                <Button Grid.Column="2"
                        Content="バックアップ作成"
                        Style="{StaticResource LightButton}"
                        Click="CreateBackup_Click"
                        VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>

        <!-- バックアップ一覧 -->
        <GroupBox Grid.Row="2"
                  Header="バックアップ一覧"
                  Style="{StaticResource LightGroupBox}"
                  Margin="0,0,0,15">
            <ListBox x:Name="BackupListBox"
                     Style="{StaticResource LightListBox}"
                     SelectionMode="Single"
                     Margin="10"
                     DisplayMemberPath="DisplayText"/>
        </GroupBox>

        <!-- 操作ボタン -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15">
            <Button Content="復元"
                    Style="{StaticResource LightButton}"
                    Click="RestoreBackup_Click"
                    Width="120"/>
            <Button Content="削除"
                    Style="{StaticResource LightButton}"
                    Click="DeleteBackup_Click"
                    Width="120"/>
            <Button Content="フォルダを開く"
                    Style="{StaticResource LightButton}"
                    Click="OpenBackupFolder_Click"
                    Width="120"/>
            <Button Content="更新"
                    Style="{StaticResource LightButton}"
                    Click="RefreshList_Click"
                    Width="120"/>
        </StackPanel>

        <!-- 閉じるボタン -->
        <Button Grid.Row="4"
                Content="閉じる"
                Style="{StaticResource LightButton}"
                Click="Close_Click"
                HorizontalAlignment="Center"
                Width="150"/>
    </Grid>
</Window>
